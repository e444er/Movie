    <style name="Theme.Movie" parent="BaseThemeMovie" />
    <!-- Base application theme. -->
    <style name="BaseThemeMovie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tertiary_color</item>
        <item name="colorPrimaryVariant">@color/tertiary_color</item>
        <item name="colorOnPrimary">@color/tertiary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tertiary_color</item>
        <item name="colorSecondaryVariant">@color/tertiary_color</item>
        <item name="colorOnSecondary">@color/tertiary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/quaternary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/grey_100</item>

        <item name="ftmTextInputLayout">@style/FTMTextInputLayout</item>
        <item name="ftmTextInputDropdownLayout">@style/FTMTextInputDropdownLayout</item>
        <item name="ftmTextInputEditText">@style/FTMTextInputEditText</item>
        <item name="ftmRadioButton">@style/FTMRadioButton</item>
        <item name="ftmButton">@style/FTMButton</item>
        <item name="ftmToolbar">@style/FTMToolbar</item>
        <item name="actionMenuTextAppearance">@style/FTMToolbarMenuStyle</item>
        <item name="ftmCheckBox">@style/FTMCheckBox</item>
        <item name="ftmTextView">@style/FTMText.Regular.15</item>
        <item name="ftmSwitchView">@style/FTMSwitchView</item>
        <item name="ftmCardView">@style/FTMCardView</item>
        <item name="bottomNavigationStyle">@style/FTMBottomNavigationView</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
        <item name="cornerRadius">@dimen/radius_8</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
    </style>

    <style name="Theme.Movie.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenIconBackgroundColor">@color/primary_color</item>
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_animation_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Movie</item>
    </style>

    <style name="Theme.Movie.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>